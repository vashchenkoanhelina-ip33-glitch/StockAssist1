<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - StockAssist</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
</head>
<body class="bg-gradient">
    <div class="bg-orb orb-1"></div>
    <div class="bg-orb orb-2"></div>
    <div class="bg-orb orb-3"></div>
    <div class="bg-noise"></div>

    <nav class="navbar navbar-expand-lg navbar-dark gradient-bar shadow-soft">
        <div class="container">
            <a class="navbar-brand brand-glow d-flex align-items-center gap-2"
               asp-controller="Home" asp-action="Index">
                <span class="logo-dot"></span>
                <span class="fw-bold">StockAssist</span>
            </a>

            <button class="navbar-toggler border-0"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto main-nav">

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Home"
                           asp-action="Index">
                            Головна
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Orders"
                           asp-action="Index">
                            Мої замовлення
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Orders"
                           asp-action="History">
                            Історія
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Orders"
                           asp-action="Create">
                            Новий запит
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Contact"
                           asp-action="Create">
                            Контакти
                        </a>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    @await Html.PartialAsync("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    <div class="page-shell">
        <div class="container py-4">
            @RenderBody()
        </div>
    </div>

    <footer class="app-footer py-3 mt-auto">
        <div class="container d-flex justify-content-between align-items-center small text-muted">
            <span>© @DateTime.Now.Year StockAssist</span>
            <span class="footer-dot"></span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
