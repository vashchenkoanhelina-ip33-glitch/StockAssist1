@model IEnumerable<StockAssist.Web.Models.Order>

<h2>Черга замовлень</h2>

<table class="table table-dark">
    <thead>
    <tr>
        <th>ID</th>
        <th>Тип</th>
        <th>Статус</th>
        <th>Дії</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var o in Model)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.ServiceType</td>
            <td>@o.Status</td>
            <td>
                <form asp-action="Complete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@o.Id" />
                    <button class="btn btn-success btn-sm">Виконано</button>
                </form>
                <form asp-action="Reject" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@o.Id" />
                    <button class="btn btn-danger btn-sm">Відхилити</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>